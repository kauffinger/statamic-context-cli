{
    "name": "kauffinger/statamic-context-cli",
    "description": "Let LLMs get context on the statamic docs",
    "keywords": [
        "Konstantin Auffinger",
        "laravel",
        "statamic-context-cli"
    ],
    "homepage": "https://github.com/kauffinger/statamic-context-cli",
    "license": "MIT",
    "authors": [
        {
            "name": "Konstantin Auffinger",
            "email": "62616071+kauffinger@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0",
        "guzzlehttp/guzzle": "^7.0",
        "laravel/prompts": "^0.3.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.0",
        "larastan/larastan": "^2.9||^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^10.0.0||^9.0.0||^8.22.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.1||^2.0",
        "phpstan/phpstan-phpunit": "^1.3||^2.0"
    },
    "autoload": {
        "psr-4": {
            "StatamicContext\\StatamicContext\\": "src/",
            "StatamicContext\\StatamicContext\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "StatamicContext\\StatamicContext\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": [
            "vendor/bin/rector",
            "vendor/bin/pint --parallel"
        ],
        "types": [
            "vendor/bin/phpstan --memory-limit=1G --error-format=table --no-progress"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "StatamicContext\\StatamicContext\\StatamicContextServiceProvider"
            ],
            "aliases": {
                "StatamicContext": "StatamicContext\\StatamicContext\\Facades\\StatamicContext"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
